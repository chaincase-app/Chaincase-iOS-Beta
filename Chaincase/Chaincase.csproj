    <Compile Remove="FormsUI\Views\MainPage.xaml.cs" />
    <Compile Remove="FormsUI\Views\TransactionDetailPage.xaml.cs" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Remove="FormsUI\Views\FeeModal.xaml" />
    <EmbeddedResource Remove="FormsUI\Views\Templates\CoinViewTemplate.xaml" />
    <EmbeddedResource Remove="FormsUI\Views\TransactionDetailPage.xaml" />
